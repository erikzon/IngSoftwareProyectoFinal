@page
@model proyectoIngSoftware.Pages.Estacion.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Administrar Estaciones</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Crear Nuevo</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover apple-style-table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Estaciones[0].Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estaciones[0].Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estaciones[0].IdMunicipalidadNavigation.Nombre) de municipalidad
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Estaciones)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdMunicipalidadNavigation.Nombre)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-page="./Edit" asp-route-id="@item.IdEstacion">Editar</a>
                        <a class="btn btn-sm btn-secondary" asp-page="./Details" asp-route-id="@item.IdEstacion">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.IdEstacion">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .apple-style-table {
        background: linear-gradient(145deg, #f0f0f0, #ffffff);
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .apple-style-table th, .apple-style-table td {
            border-top: none;
            border-bottom: 1px solid #ddd;
            padding: 15px;
            vertical-align: middle;
        }

        .apple-style-table thead {
            background: linear-gradient(145deg, #1a73e8, #4285f4);
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .apple-style-table th:first-child {
            border-top-left-radius: 15px;
        }

        .apple-style-table th:last-child {
            border-top-right-radius: 15px;
        }

        .apple-style-table tbody tr:hover {
            background: rgba(0, 0, 0, 0.05);
        }

    .btn-primary {
        background: linear-gradient(145deg, #4a90e2, #007aff);
        border: none;
        border-radius: 25px;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        text-transform: uppercase;
    }

        .btn-primary:hover {
            background: linear-gradient(145deg, #3a78d2, #0067d6);
        }

    .btn-sm {
        border-radius: 15px;
    }

    .btn-info {
        background: linear-gradient(145deg, #3c8dbc, #3498db);
        border: none;
    }

        .btn-info:hover {
            background: linear-gradient(145deg, #2b79a0, #1f77d1);
        }

    .btn-secondary {
        background: linear-gradient(145deg, #6c757d, #868e96);
        border: none;
    }

        .btn-secondary:hover {
            background: linear-gradient(145deg, #555a61, #626971);
        }

    .btn-danger {
        background: linear-gradient(145deg, #e74c3c, #c0392b);
        border: none;
    }

        .btn-danger:hover {
            background: linear-gradient(145deg, #c0392b, #a93226);
        }
</style>
