@page
@model proyectoIngSoftware.Pages.Estacion.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Administrar Estaciones</h1>

<p>
    <a asp-page="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estaciones[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estaciones[0].Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estaciones[0].IdMunicipalidadNavigation.Nombre) de municipalidad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Estaciones) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMunicipalidadNavigation.Nombre)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdEstacion">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.IdEstacion">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdEstacion">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
