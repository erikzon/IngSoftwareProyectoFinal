@page
@model proyectoIngSoftware.Pages.Empleado.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Empleados</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Empleados.Nombre" class="control-label"></label>
                <input asp-for="Empleados.Nombre" class="form-control" />
                <span asp-validation-for="Empleados.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.Direccion" class="control-label"></label>
                <input asp-for="Empleados.Direccion" class="form-control" />
                <span asp-validation-for="Empleados.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.Telefono" class="control-label"></label>
                <input asp-for="Empleados.Telefono" class="form-control" />
                <span asp-validation-for="Empleados.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.IdPuesto" class="control-label"></label>
                <select asp-for="Empleados.IdPuesto" class ="form-control" asp-items="ViewBag.IdPuesto"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
